{
  "version": 9,
  "configurePresets": [
    {
      "name": "release-windows",
      "displayName": "Release (Windows)",
      "generator": "Ninja",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "binaryDir": "${sourceDir}/build/release",
      "installDir": "${sourceDir}/out/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "release-unix",
      "displayName": "Release (Unix)",
      "generator": "Ninja",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "binaryDir": "${sourceDir}/build/release",
      "installDir": "${sourceDir}/out/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      },
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "release-windows",
      "configurePreset": "release-windows"
    },
    {
      "name": "release-unix",
      "configurePreset": "release-unix"
    }
  ]
}
